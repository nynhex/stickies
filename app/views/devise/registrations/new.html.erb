 <h1 class="headline">Stick it with Stickies!</h1>
 
 <div class="form-img">
   <div class="form-box"> 
    <h2 class="sign-up-in">Sign Up</h2>

    <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
      <%= devise_error_messages! %>

      <div><%= f.text_field :first, :autofocus => true, placeholder: "First Name", class: "input-margin"  %></div>

      <div><%= f.text_field :last, placeholder: "Last Name" , class: "input-margin" %></div>

      <div><%= f.email_field :email, placeholder: "Email", class: "input-margin" %></div>

      <div><%= f.password_field :password, placeholder: "Password", class: "input-margin" %></div>

      <div><%= f.password_field :password_confirmation, placeholder: "Confirmation", class: "input-margin" %></div>

      <div><%= f.submit "Sign up", class: "btn btn-default" %></div>
    <% end %>

    <%= link_to "Sign In", new_user_session_path %>
  </div>

  <img src="https://assetlibrary.dstewart.com/ImageFolio43_files/gallery/Product_Images/Web/PNG/Zoom/44196.png" class="sticky-img" />
</div>