  <h1 class="headline">Devise Views Customize</h1>
 <div class="form-img">
  <div class="form-box"> 
    <h2 class="sign-up-in">Sign In</h2>

    <%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
      <div><%= f.email_field :email, :autofocus => true, placeholder: "Email", class: "input-margin" %></div>

      <div><%= f.password_field :password, placeholder: "Password" , class: "input-margin" %></div>

      <% if devise_mapping.rememberable? -%>
        <div><%= f.check_box :remember_me %> <%= f.label :remember_me %></div>
      <% end -%>

      <div><%= f.submit "Sign in", class: "btn btn-default" %></div>
    <% end %>

    <%= link_to "Sign Up", new_user_registration_path %>
  </div>



  <img src="https://assetlibrary.dstewart.com/ImageFolio43_files/gallery/Product_Images/Web/PNG/Zoom/44196.png" class="sticky-img" />
</div>